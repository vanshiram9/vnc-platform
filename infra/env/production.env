# -----------------------------
# CORE
# -----------------------------
NODE_ENV=production
APP_NAME=VNC_PLATFORM
APP_PORT=3000

# -----------------------------
# SECURITY
# -----------------------------
JWT_SECRET=REPLACE_WITH_STRONG_RANDOM_SECRET
JWT_EXPIRES_IN=15m

OTP_TTL_SECONDS=300
OTP_MAX_ATTEMPTS=5

# -----------------------------
# DATABASE (POSTGRES)
# -----------------------------
DB_HOST=REPLACE_WITH_PROD_DB_HOST
DB_PORT=5432
DB_NAME=REPLACE_WITH_PROD_DB_NAME
DB_USER=REPLACE_WITH_PROD_DB_USER
DB_PASSWORD=REPLACE_WITH_PROD_DB_PASSWORD
DB_SSL=true

# -----------------------------
# LEDGER / WALLET
# -----------------------------
LEDGER_HASH_ALGO=sha256
LEDGER_STRICT_MODE=true

# -----------------------------
# COMPLIANCE / REGION
# -----------------------------
DEFAULT_COUNTRY=IN
COMPLIANCE_STRICT=true

# -----------------------------
# FEATURE FLAGS (PROD)
# -----------------------------
FEATURE_MINING_ENABLED=true
FEATURE_ADS_ENABLED=true
FEATURE_TRADE_ENABLED=true
FEATURE_IMPORT_EXPORT_ENABLED=true

# -----------------------------
# OWNER / EMERGENCY
# -----------------------------
OWNER_CONTACT_EMAIL=owner@yourdomain.com
KILL_SWITCH_STARTUP_STATE=OFF

# -----------------------------
# LOGGING / AUDIT
# -----------------------------
LOG_LEVEL=info
AUDIT_MODE=true

