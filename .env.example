NODE_ENV=production
APP_NAME=VNC_PLATFORM
APP_PORT=3000

# ------------------------------------------------------------
# SECURITY
# ------------------------------------------------------------
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=15m

OTP_TTL_SECONDS=300
OTP_MAX_ATTEMPTS=5

# ------------------------------------------------------------
# DATABASE
# ------------------------------------------------------------
DB_HOST=REPLACE_WITH_DB_HOST
DB_PORT=5432
DB_NAME=REPLACE_WITH_DB_NAME
DB_USER=REPLACE_WITH_DB_USER
DB_PASSWORD=REPLACE_WITH_DB_PASSWORD
